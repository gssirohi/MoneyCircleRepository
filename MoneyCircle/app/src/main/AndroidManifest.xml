<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="company.greatapp.moneycircle" >

    <uses-permission android:name="android.permission.READ_CONTACTS" />
    <uses-permission android:name="android.permission.RECEIVE_SMS" />
    <uses-permission android:name="android.permission.INTERNET" />

    <permission
        android:name="company.greatapp.moneycircle.permission.C2D_MESSAGE"
        android:protectionLevel="signature" />
    <!-- Keeps the processor from sleeping when a message is received. -->
    <uses-permission android:name="android.permission.WAKE_LOCK" />
    <uses-permission android:name="company.greatapp.moneycircle.permission.C2D_MESSAGE" />

    <!-- This app has permission to register and receive data message. -->
    <uses-permission android:name="com.google.android.c2dm.permission.RECEIVE" />
    <uses-permission android:name="android.permission.USE_CREDENTIALS" />

    <!-- To retrieve the account name (email) as part of sign-in: -->
    <uses-permission android:name="android.permission.GET_ACCOUNTS" />

    <!-- Receivers -->
    <receiver android:name=".receiver.TransactionalSmsListener" >
        <intent-filter>
            <action android:name="android.provider.Telephony.SMS_RECEIVED" />
        </intent-filter>
    </receiver>

    <application
        android:name=".manager.AppController"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/Theme.MoneyCircle" >

        <!--
  Application-specific subclass of GCMBaseIntentService that will
  handle received messages.

  By default, it must be named .GCMIntentService, unless the
  application uses a custom BroadcastReceiver that redefines its name.
        -->
        <service android:name=".GCMIntentService" />

        <receiver android:name=".receiver.MoneyTransactionReceiver" >
            <intent-filter>
                <action android:name="MONEY_TRANSACTION" />
            </intent-filter>
        </receiver>
        <receiver
            android:name="com.google.android.gcm.GCMBroadcastReceiver"
            android:permission="com.google.android.c2dm.permission.SEND" >
            <intent-filter>

                <!-- Receives the actual messages. -->
                <action android:name="com.google.android.c2dm.intent.RECEIVE" />
                <!-- Receives the registration id. -->
                <action android:name="com.google.android.c2dm.intent.REGISTRATION" />

                <category android:name="company.greatapp.moneycircle" />
            </intent-filter>
        </receiver>

        <activity
            android:name=".MainActivity"
            android:label="@string/app_name" >
        </activity>
        <activity
            android:name=".UserWelcomeActivity"
            android:label="@string/app_name" >
        </activity>
        <activity
            android:name=".ContactUsActivity"
            android:label="@string/activity_contact_us" >
        </activity>
        <activity
            android:name=".RegisterAndSignInActivity"
            android:label="@string/activity_register_and_SignIn" >
        </activity>
        <activity
            android:name=".split.SetSplitAmountActivity"
            android:label="@string/title_activity_set_split_amount"
            android:theme="@style/Theme.AppCompat.Dialog" >
        </activity>
        <activity
            android:name=".categories.ManageCategoriesActivity"
            android:label="@string/title_activity_manage_categories" >
        </activity>
        <activity
            android:name=".ViewAndEditProfileActivity"
            android:label="@string/title_activity_view_and_edit_profle" >
        </activity>
        <activity
            android:name=".SetNewPasswordActivity"
            android:label="@string/title_activity_set_new_password" >
        </activity>
        <activity
            android:name=".SettingActivity"
            android:label="@string/activity_setting" >
        </activity>
        <activity
            android:name=".split.SplitToolActivity"
            android:label="@string/title_activity_split_tool" >
        </activity>
        <activity
            android:name=".chooser.ChooserActivity"
            android:label="@string/title_activity_chooser"
            android:theme="@android:style/Theme.Translucent" >
        </activity>
        <activity
            android:name=".ContactAndCircleActivity"
            android:label="@string/activity_contact_and_circle" >
        </activity>

        <provider
            android:name=".db.MoneyCircleProvider"
            android:authorities="company.greatapp.moneycircle.db"
            android:exported="false" />

        <activity
            android:name=".AddNewEntryActivity"
            android:label="@string/title_activity_add_new_entry" >
        </activity>
        <activity
            android:name=".NewHomeActivity"
            android:label="@string/title_activity_new_home" >
        </activity>
        <activity
            android:name=".LauncherActivity"
            android:label="launcher" >
        </activity>
        <activity
            android:name=".ManageCircleActivity"
            android:label="@string/actvity_manage_circle" >
        </activity>
        <activity
            android:name=".RegisterActivity"
            android:label="@string/title_activity_register" >
        </activity>
        <activity
            android:name=".MoneyCircleWelcomeActivity"
            android:label="@string/title_activity_money_circle_welcome" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>
