<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="company.greatapp.moneycircle.RegisterActivity"
    >
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Name"
        android:id="@+id/tv_register_name_text"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:hint="Name"
        android:ems="10"
        android:id="@+id/et_register_name"
        android:layout_below="@+id/tv_register_name_text"
        android:layout_alignLeft="@+id/et_register_email"
        android:layout_alignStart="@+id/et_register_email" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Phone Number"
        android:id="@+id/tv_register_phone_text"
        android:layout_below="@+id/et_register_name"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="58dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Email"
        android:id="@+id/tv_register_email_text"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/et_register_phone"
        android:layout_marginTop="30dp" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textEmailAddress"
        android:ems="10"
        android:id="@+id/et_register_email"
        android:text="email"
        android:layout_below="@+id/tv_register_email_text"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="REGISTER"
        android:id="@+id/b_register_register_action"
        android:layout_below="@+id/et_register_email"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="88dp" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="phone"
        android:ems="10"
        android:id="@+id/et_register_phone"
        android:layout_below="@+id/tv_register_phone_text"
        android:layout_alignRight="@+id/et_register_email"
        android:layout_alignEnd="@+id/et_register_email"
        android:text="phone" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Registration Failed! Try Again !"
        android:id="@+id/tv_register_fail"
        android:layout_below="@+id/et_register_email"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="46dp"
        android:background="#ffff1421"
        android:textColor="#ffffffff" />

</RelativeLayout>
