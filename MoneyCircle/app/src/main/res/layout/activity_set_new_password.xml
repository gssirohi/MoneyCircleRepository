<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/llInfopasswordBlockId"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginTop="48dp"
        android:weightSum="3"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/llpasswordId"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:padding="10dp"
            android:layout_weight="1"
            android:weightSum="3">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="32sp"
                android:textStyle="bold"
                android:text="Old Password"/>

            <EditText
                android:id="@+id/etPasswordId"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="2"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/llNewPasswordId"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_weight="1"
            android:padding="10dp"
            android:weightSum="3">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1.48"
                android:textSize="32sp"
                android:textStyle="bold"
                android:text="New Password"/>

            <EditText
                android:id="@+id/etNewPasswordId"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:phoneNumber="true"
                android:layout_weight="2"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/llConfirmPasswordId"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:padding="10dp"
            android:layout_weight="1"
            android:weightSum="3">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1.59"
                android:textSize="32sp"
                android:textStyle="bold"
                android:text="Confirm Password"/>

            <EditText
                android:id="@+id/etConfirmPasswordId"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="2"/>
        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/llConfirmPasswordButtonId"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="32dp"
        android:weightSum="2">

        <Button
            android:id="@+id/btConfirmPasswordId"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="OK"
            android:layout_margin="5dp"/>

        <Button
            android:id="@+id/btCanelId"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Cancel"
            android:layout_margin="5dp"/>
    </LinearLayout>
</RelativeLayout>