<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="240dp" android:layout_height="match_parent"
    android:background="@drawable/list_item_bg_pressed">

    <!-- Listview to display slider menu -->
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="0dp"
        android:id="@+id/drawer">
        <include
            android:id="@+id/header_drawer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            layout="@layout/header" />
        <company.greatapp.moneycircle.view.CircleItemView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/civ_drawer_account"
            android:layout_gravity="center" />

        <ListView
            android:id="@+id/list_slidermenu"
            android:layout_width="240dp"
            android:layout_height="match_parent"
            android:choiceMode="singleChoice"
            android:dividerHeight="1dp"
            />


    </LinearLayout>

</LinearLayout>
